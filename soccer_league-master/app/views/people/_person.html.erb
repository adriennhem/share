<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table id="people_path" class="table table-condensed">
<tr>
  <th title="Name"><%= sortable "lastname", "Name"  %></th>
  <th title="Position"><%= sortable "position"  %></th>
  <th title="Nationality"><%= sortable "nationality"  %></th>
</tr>
<% for person in @people %>
<tr>
  <td><%= link_to "#{person.name}", person %></td>
  <td><%= person.position %></td>
  <td><%= person.nationality %></td>
</tr>
<% end %>
</table>
<%= render :partial => "shared/pagination", :locals => {:model => @people} %>
