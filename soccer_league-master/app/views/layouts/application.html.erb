<!DOCTYPE html>
<html>
    <%= render 'layouts/metadata' %>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults, "jquery.tokeninput", "jquery-ui-1.8.11.custom.min", "bootstrap", "bootstrap-tab" %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
        <% flash.each do |key, value| %>
			<%= content_tag(:div, value, :class => "alert #{key}") %>          
        <% end %>
        <section id="main-content"><%= yield %></section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
