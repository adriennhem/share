<%=header_title("Sign up")%>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label :username, :class => "control-label" %>
    <div class="controls"><%= f.text_field :username %></div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls"><%= f.text_field :email %></div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls"><%= f.password_field :password %></div>
  </div>
  <div class="control-group">
    <%= f.label :password_confirmation, :class => "control-label" %>
    <div class="controls"><%= f.password_field :password_confirmation %></div>
  </div>
  <div class="control-group">
    <%= f.label "Preferred Unit of Measure", :class => "control-label" %>
    <div class="controls"><%= f.select(:metric, User::METRIC_ENGLISH) %></div>
  </div>
  <%= hidden_field_tag "user[free_sign_up]", "1" %>
  <div class="form-actions">
    <%= f.submit "Sign Up", :class => "btn" %>
    <%= link_to "Cancel", root_path, :class => "btn" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
